---
import config from "@/config/config.json";

const { contact_form_action } = config.params;
---

<section id="hero-section" class="section bg-offWhite">
  <div class="container">
    <!-- Login Header -->
    <div class="mx-auto text-center lg:col-10 mb-12 md:mb-16 animate-on-scroll delay-0">
      <h1 class="mb-6 text-h4 lg:text-h2 leading-[1.2] font-semibold">
        Welcome Back
      </h1>
      <p class="text-lg md:text-xl text-text font-primary">
        Log in to continue your learning journey
      </p>
    </div>

    <div class="max-w-md mx-auto">
      <form class="w-full bg-white rounded-2xl shadow-lg p-8 md:p-10" action={contact_form_action} method="POST">
        <div class="w-full flex flex-col gap-6 animate-on-scroll delay-1">
          <!-- Email Field -->
          <div class="w-full">
            <label for="email" class="block text-sm font-semibold font-primary text-text-dark mb-2">
              Email Address
            </label>
            <input
              type="email"
              id="email"
              name="email"
              placeholder="your.email@example.com"
              required
              class="form-input w-full px-4 py-3 border-2 border-grayBlue-30 rounded-lg font-primary text-base focus:border-primaryYellow focus:ring-2 focus:ring-primaryYellow/20 transition-all outline-none"
            />
          </div>

          <!-- Password Field -->
          <div class="w-full">
            <label for="password" class="block text-sm font-semibold font-primary text-text-dark mb-2">
              Password
            </label>
            <input
              type="password"
              id="password"
              name="password"
              placeholder="Enter your password"
              required
              class="form-input w-full px-4 py-3 border-2 border-grayBlue-30 rounded-lg font-primary text-base focus:border-primaryYellow focus:ring-2 focus:ring-primaryYellow/20 transition-all outline-none"
            />
          </div>

          <!-- Remember Me / Forgot Password -->
          <div class="w-full flex items-center justify-between gap-4">
            <div class="flex gap-2 items-center">
              <input
                type="checkbox"
                name="remember"
                id="remember"
                class="w-4 h-4 accent-primaryYellow cursor-pointer border-2 border-grayBlue-30 rounded focus:ring-2 focus:ring-primaryYellow/20 transition-all"
              />
              <label for="remember" class="text-sm text-text-dark font-primary cursor-pointer">
                Remember me
              </label>
            </div>
            <a
              class="text-sm font-medium font-primary text-primaryYellow hover:text-text-dark transition-colors duration-200"
              href="/contact">
              Forgot password?
            </a>
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full text-base uppercase font-semibold font-primary group flex items-center justify-between bg-darkBlue cursor-pointer rounded-full hover:bg-primaryYellow transition-all duration-300 shadow-lg hover:shadow-xl mt-2"
          >
            <span class="px-5 ml-5 py-3 text-offWhite group-hover:text-text-dark font-semibold transition-colors">
              Log In
            </span>
            <div class="p-2.5 rounded-full mr-3 transition-all duration-300">
              <svg
                stroke-width="1.5"
                width="24"
                height="24"
                class="text-offWhite group-hover:text-text-dark transition-colors"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25" />
              </svg>
            </div>
          </button>

          <!-- Divider -->
          <div class="flex items-center gap-4 my-2">
            <div class="flex-1 h-[1px] bg-grayBlue-30"></div>
            <span class="text-sm text-text/60 font-primary">or continue with</span>
            <div class="flex-1 h-[1px] bg-grayBlue-30"></div>
          </div>

          <!-- Social Login Buttons -->
          <div class="flex gap-3">
            <button
              type="button"
              class="flex items-center justify-center px-4 py-3 border-2 border-grayBlue-30 rounded-lg hover:border-primaryYellow hover:bg-primaryYellow/10 transition-all duration-300 flex-1"
            >
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
              </svg>
            </button>
            <button
              type="button"
              class="flex items-center justify-center px-4 py-3 border-2 border-grayBlue-30 rounded-lg hover:border-primaryYellow hover:bg-primaryYellow/10 transition-all duration-300 flex-1"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.166 6.839 9.489.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.603-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.463-1.11-1.463-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.163 22 16.418 22 12c0-5.523-4.477-10-10-10z"/>
              </svg>
            </button>
          </div>

          <!-- Sign Up Link -->
          <div class="text-center mt-2">
            <p class="text-sm text-text-dark font-primary">
              Don't have an account? 
              <a
                class="font-semibold text-primaryYellow hover:text-text-dark transition-colors duration-200 ml-1"
                href="/contact">
                Get Started
              </a>
            </p>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>

<style>
  /* Animation Keyframes */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Animation Classes */
  .animate-on-scroll {
    opacity: 0;
  }

  .animate-on-scroll.delay-0 { 
    animation: fadeInUp 0.5s ease-out 0s forwards; 
  }

  .animate-on-scroll.delay-1 { 
    animation: fadeInUp 0.5s ease-out 0.1s forwards; 
  }
</style>

<script>
  // Intersection Observer for scroll animations
  if (typeof window !== 'undefined') {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-on-scroll');
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('.animate-on-scroll').forEach(el => {
        observer.observe(el);
      });
    });
  }
</script>
