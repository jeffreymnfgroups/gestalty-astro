---
import ImageMod from "@/components/ImageMod.astro";
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const { title, subtitle, description, steps } = (
  (await getEntry(
    "howItWorksJourneySection",
    "how-it-works-journey"
  )) as CollectionEntry<"howItWorksJourneySection">
).data;
---

<section class="section bg-gradient-to-b from-transparent to-light/30">
  <div class="container">
    <div class="row">
      <div class="mx-auto text-center lg:col-10" data-aos="fade-up-sm">
        {
          subtitle && (
            <p
              class="mb-2 font-bold text-tertiary"
              set:html={markdownify(subtitle)}
            />
          )
        }
        {title && <h2 class="mb-6 font-bold" set:html={markdownify(title)} />}
        {
          description && (
            <p class="text-lg/[inherit] font-semibold" set:html={markdownify(description)} />
          )
        }
      </div>
      <div class="col-12 pt-16">
        <div class="mx-auto lg:col-10">
          <div class="relative">
            {
              steps?.map((step, index) => (
                <div
                  class="relative mb-12 last:mb-0"
                  data-aos="fade-up-sm"
                  data-aos-delay={200 + index * 100}>
                  <div class="flex gap-6">
                    {/* Step Number and Icon */}
                    <div class="flex flex-col items-center">
                      <div class="flex h-20 w-20 items-center justify-center rounded-full bg-gradient-to-br from-primary to-secondary text-white shadow-lg">
                        <span class="text-3xl font-bold">
                          {step.step_number}
                        </span>
                      </div>
                      {index < steps.length - 1 && (
                        <div class="mt-4 h-full min-h-[120px] w-0.5 bg-gradient-to-b from-primary/40 to-transparent" />
                      )}
                    </div>

                    {/* Content */}
                    <div class="flex-1 pb-8">
                      <div class="rounded-2xl bg-white p-6 shadow-md hover:shadow-xl transition-shadow duration-300 md:p-8">
                        {step.icon && (
                          <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-tertiary/20">
                            <ImageMod
                              class="h-6 w-6 object-cover"
                              src={step.icon}
                              alt={`icon for step ${step.step_number}`}
                            />
                          </div>
                        )}
                        {step.title && (
                          <h3
                            class="mb-3 text-xl font-bold text-text-dark md:text-2xl"
                            set:html={markdownify(step.title)}
                          />
                        )}
                        {step.short_description && (
                          <p
                            class="mb-4 text-text/80 font-semibold"
                            set:html={markdownify(step.short_description)}
                          />
                        )}
                        {step.list && step.list.length > 0 && (
                          <ul class="space-y-2">
                            {step.list.map((item) => (
                              <li class="flex items-start gap-2">
                                <svg
                                  class="mt-1 h-5 w-5 flex-shrink-0 text-tertiary"
                                  fill="none"
                                  stroke="currentColor"
                                  viewBox="0 0 24 24">
                                  <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"
                                  />
                                </svg>
                                <span set:html={markdownify(item)} />
                              </li>
                            ))}
                          </ul>
                        )}
                      </div>
                    </div>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

