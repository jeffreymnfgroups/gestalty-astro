---
import ImageMod from "@/components/ImageMod.astro";
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const { title, subtitle, description, left_image, right_image } = (
  (await getEntry(
    "mentorshipBannerSection",
    "mentorship-banner"
  )) as CollectionEntry<"mentorshipBannerSection">
).data;
---

<section id="hero-section" class="section pt-24">
  <div class="container">
    <div class="row">
      <div class="mx-auto text-center lg:col-8" data-aos="fade-up-sm">
        {
          subtitle && (
            <p
              class="mb-2 font-medium text-tertiary"
              set:html={markdownify(subtitle)}
            />
          )
        }
        {title && <h1 class="mb-6 text-h4 lg:text-h2 leading-[1.2] font-semibold" set:html={markdownify(title)} />}
        {
          description && (
            <p class="text-lg/[inherit]" set:html={markdownify(description)} />
          )
        }
      </div>
      <div class="col-12 pt-20" data-aos="fade-up-sm" data-aos-delay="200">
        <div class="row g-4 justify-center">
          {
            left_image && (
              <div class="lg:col-6">
                <ImageMod
                  class="h-[300px] min-h-full w-full rounded-lg object-cover md:h-[600px] md:rounded-3xl"
                  src={left_image}
                  alt={`image related to ${title}`}
                />
              </div>
            )
          }
          {
            right_image && (
              <div class="lg:col-6">
                <ImageMod
                  class="h-[300px] min-h-full w-full rounded-lg object-cover md:h-[600px] md:rounded-3xl"
                  src={right_image}
                  alt={`image related to ${title}`}
                />
              </div>
            )
          }
        </div>
      </div>
    </div>
  </div>
</section>

