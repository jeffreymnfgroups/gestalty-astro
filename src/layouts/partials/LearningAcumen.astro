---
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const {
  title,
  subtitle,
  description,
  what_it_does_title,
  what_it_does_list,
  result_title,
  result_description,
  result_list,
} = (
  (await getEntry(
    "learningAcumenSection",
    "learning-acumen"
  )) as CollectionEntry<"learningAcumenSection">
).data;
---

<section class="section bg-light">
  <div class="container">
    <div class="row">
      <div class="mx-auto text-center lg:col-10" data-aos="fade-up-sm">
        {
          subtitle && (
            <p
              class="mb-2 font-medium text-tertiary"
              set:html={markdownify(subtitle)}
            />
          )
        }
        {title && <h2 class="mb-6" set:html={markdownify(title)} />}
        {
          description && (
            <p class="text-lg/[inherit]" set:html={markdownify(description)} />
          )
        }
      </div>
      <div class="col-12 pt-16">
        <div class="row justify-center">
          <div class="lg:col-10" data-aos="fade-up-sm" data-aos-delay="100">
            <div class="rounded-xl bg-white p-8 md:rounded-3xl md:p-12">
              {
                what_it_does_title && (
                  <h3 class="h4 mb-6" set:html={markdownify(what_it_does_title)} />
                )
              }
              {
                what_it_does_list && (
                  <ul class="mb-8 space-y-3">
                    {what_it_does_list.map((item) => (
                      <li class="flex gap-3">
                        <span class="text-tertiary">•</span>
                        <span set:html={markdownify(item)} />
                      </li>
                    ))}
                  </ul>
                )
              }
              {
                result_title && (
                  <h3 class="h4 mb-4" set:html={markdownify(result_title)} />
                )
              }
              {
                result_description && (
                  <p class="mb-6 text-lg/[inherit]" set:html={markdownify(result_description)} />
                )
              }
              {
                result_list && (
                  <ul class="space-y-3">
                    {result_list.map((item) => (
                      <li class="flex gap-3">
                        <span class="text-tertiary">•</span>
                        <span set:html={markdownify(item)} />
                      </li>
                    ))}
                  </ul>
                )
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

