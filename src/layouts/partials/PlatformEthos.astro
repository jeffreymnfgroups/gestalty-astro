---
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const {
  title,
  subtitle,
  description,
  we_connect_title,
  we_connect_list,
  commitment_title,
  commitment_description,
} = (
  (await getEntry(
    "platformEthosSection",
    "platform-ethos"
  )) as CollectionEntry<"platformEthosSection">
).data;
---

<section class="section">
  <div class="container">
    <div class="row">
      <div class="mx-auto text-center lg:col-10" data-aos="fade-up-sm">
        {
          subtitle && (
            <p
              class="mb-2 font-medium text-tertiary"
              set:html={markdownify(subtitle)}
            />
          )
        }
        {title && <h2 class="mb-6" set:html={markdownify(title)} />}
        {
          description && (
            <p class="text-lg/[inherit]" set:html={markdownify(description)} />
          )
        }
      </div>
      <div class="col-12 pt-16">
        <div class="row justify-center g-4">
          <div class="lg:col-6" data-aos="fade-up-sm" data-aos-delay="100">
            <div class="min-h-full rounded-xl bg-light p-8 md:rounded-3xl md:p-10">
              {
                we_connect_title && (
                  <h3 class="h4 mb-6" set:html={markdownify(we_connect_title)} />
                )
              }
              {
                we_connect_list && (
                  <ul class="space-y-4">
                    {we_connect_list.map((item) => (
                      <li class="flex gap-3">
                        <span class="text-tertiary">â€¢</span>
                        <span set:html={markdownify(item)} />
                      </li>
                    ))}
                  </ul>
                )
              }
            </div>
          </div>
          <div class="lg:col-6" data-aos="fade-up-sm" data-aos-delay="200">
            <div class="min-h-full rounded-xl bg-tertiary p-8 text-text-light md:rounded-3xl md:p-10">
              {
                commitment_title && (
                  <h3 class="h4 mb-6 text-inherit" set:html={markdownify(commitment_title)} />
                )
              }
              {
                commitment_description && (
                  <p class="text-lg/[inherit] text-inherit" set:html={markdownify(commitment_description)} />
                )
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

