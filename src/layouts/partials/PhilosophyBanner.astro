---
import ImageMod from "@/components/ImageMod.astro";
import DynamicIcon from "@/helpers/DynamicIcon";
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const { title, subtitle, subheadline, description, left_image, right_image, buttons } = (
  (await getEntry(
    "philosophyBannerSection",
    "philosophy-banner"
  )) as CollectionEntry<"philosophyBannerSection">
).data;
---

<section id="hero-section" class="section pt-24">
  <div class="container">
    <div class="row">
      <div class="mx-auto text-center lg:col-10" data-aos="fade-up-sm">
        <!-- {
          subtitle && (
            <p
              class="mb-2 font-medium text-tertiary"
              set:html={markdownify(subtitle)}
            />
          )
        } -->
        {title && <h1 class="mb-4" set:html={markdownify(title)} />}
        {
          subheadline && (
            <h2 class="h4 mb-6 font-medium" set:html={markdownify(subheadline)} />
          )
        }
        {
          description && (
            <p class="text-lg/[inherit] mb-8" set:html={markdownify(description)} />
          )
        }
        {
          buttons && (
            <div class="flex flex-wrap justify-center gap-4">
              {buttons.map((button) =>
                button.enable ? (
                  <a
                    href={button.link}
                    class="btn btn-outline-primary text-sm px-4 py-2 font-medium [&_.icon-wrapper]:h-9 [&_.icon-wrapper]:w-9 [&_.icon]:h-9 [&_.icon]:min-w-9 [&_svg]:h-4 [&_svg]:w-4">
                    {button.label}
                    <span class="sr-only">Details</span>
                    <span class="icon-wrapper">
                      <span class="icon">
                        <DynamicIcon icon={"FaArrowRight"} />
                      </span>
                      <span class="icon" aria-hidden="true">
                        <DynamicIcon icon={"FaArrowRight"} />
                      </span>
                    </span>
                  </a>
                ) : null
              )}
            </div>
          )
        }
      </div>
      <div class="col-12 pt-20" data-aos="fade-up-sm" data-aos-delay="200">
        <div class="row g-4 justify-center">
          {
            left_image && (
              <div class="lg:col-6">
                <ImageMod
                  class="h-[300px] min-h-full w-full rounded-lg object-cover md:h-[500px] md:rounded-3xl"
                  src={left_image}
                  alt={`image related to ${title}`}
                />
              </div>
            )
          }
          {
            right_image && (
              <div class="lg:col-6">
                <ImageMod
                  class="h-[300px] min-h-full w-full rounded-lg object-cover md:h-[500px] md:rounded-3xl"
                  src={right_image}
                  alt={`image related to ${title}`}
                />
              </div>
            )
          }
        </div>
      </div>
    </div>
  </div>
</section>

