---
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const { title, subtitle, table } = (
  (await getEntry(
    "diagnosticLensSection",
    "diagnostic-lens"
  )) as CollectionEntry<"diagnosticLensSection">
).data;
---

<section class="section">
  <div class="container">
    <div class="row">
      <div class="mx-auto text-center lg:col-10" data-aos="fade-up-sm">
        {title && <h2 class="mb-4" set:html={markdownify(title)} />}
        {
          subtitle && (
            <p
              class="mb-12 text-lg/[inherit]"
              set:html={markdownify(subtitle)}
            />
          )
        }
      </div>
      <div class="col-12" data-aos="fade-up-sm" data-aos-delay="200">
        <div class="overflow-x-auto rounded-xl bg-light p-6 md:p-8">
          <table class="w-full">
            <thead>
              <tr class="border-b border-border">
                {
                  table.headers.map((header) => (
                    <th class="pb-4 text-left font-bold text-text-dark">
                      {header}
                    </th>
                  ))
                }
              </tr>
            </thead>
            <tbody>
              {
                table.rows.map((row, index) => (
                  <tr
                    class={`${index < table.rows.length - 1 ? "border-b border-border" : ""}`}>
                    <td class="py-4 pr-4 font-medium text-text-dark">
                      {row.problem}
                    </td>
                    <td class="py-4 pr-4">{row.impact}</td>
                    <td class="py-4 font-medium text-tertiary">{row.solution}</td>
                  </tr>
                ))
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

