---
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const {
  title,
  subtitle,
  description,
  framework_title,
  framework_description,
  cycle_steps,
} = (
  (await getEntry(
    "learningEngineSection",
    "learning-engine"
  )) as CollectionEntry<"learningEngineSection">
).data;
---

<section class="section">
  <div class="container">
    <div class="row">
      <div class="mx-auto text-center lg:col-10" data-aos="fade-up-sm">
        {
          subtitle && (
            <p
              class="mb-2 font-medium text-tertiary"
              set:html={markdownify(subtitle)}
            />
          )
        }
        {title && <h2 class="mb-6" set:html={markdownify(title)} />}
        {
          description && (
            <p class="text-lg/[inherit]" set:html={markdownify(description)} />
          )
        }
      </div>
      <div class="col-12 pt-16">
        <div class="row justify-center">
          <div class="lg:col-10" data-aos="fade-up-sm" data-aos-delay="100">
            <div class="rounded-xl bg-light p-8 md:rounded-3xl md:p-12">
              {
                framework_title && (
                  <h3 class="h4 mb-4 text-center" set:html={markdownify(framework_title)} />
                )
              }
              {
                framework_description && (
                  <p class="mb-8 text-lg/[inherit] text-center" set:html={markdownify(framework_description)} />
                )
              }
              {
                cycle_steps && (
                  <div class="flex flex-wrap justify-center gap-4">
                    {cycle_steps.map((step, index) => (
                      <div class="flex items-center gap-3">
                        <div class="flex h-12 w-12 items-center justify-center rounded-full bg-tertiary text-white font-bold">
                          {index + 1}
                        </div>
                        <span class="text-lg font-medium" set:html={markdownify(step)} />
                        {index < cycle_steps.length - 1 && (
                          <span class="text-2xl text-tertiary">â†’</span>
                        )}
                      </div>
                    ))}
                  </div>
                )
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

