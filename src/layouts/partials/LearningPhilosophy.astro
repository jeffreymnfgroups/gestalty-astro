---
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const {
  title,
  subtitle,
  description,
  parallel_title,
  parallel_description,
  what_it_means_title,
  what_it_means_list,
  closing,
} = (
  (await getEntry(
    "learningPhilosophySection",
    "learning-philosophy"
  )) as CollectionEntry<"learningPhilosophySection">
).data;
---

<section class="section">
  <div class="container">
    <div class="row">
      <div class="mx-auto text-center lg:col-10" data-aos="fade-up-sm">
        {
          subtitle && (
            <p
              class="mb-2 font-medium text-tertiary"
              set:html={markdownify(subtitle)}
            />
          )
        }
        {title && <h2 class="mb-6" set:html={markdownify(title)} />}
        {
          description && (
            <p class="text-lg/[inherit] mb-8" set:html={markdownify(description)} />
          )
        }
      </div>
      <div class="col-12 pt-8">
        <div class="row justify-center g-4">
          <div class="lg:col-10" data-aos="fade-up-sm" data-aos-delay="100">
            <div class="rounded-xl bg-light p-8 md:rounded-3xl md:p-12">
              {
                parallel_title && (
                  <h3 class="h4 mb-4" set:html={markdownify(parallel_title)} />
                )
              }
              {
                parallel_description && (
                  <p class="mb-8 text-lg/[inherit]" set:html={markdownify(parallel_description)} />
                )
              }
              {
                what_it_means_title && (
                  <h3 class="h4 mb-6" set:html={markdownify(what_it_means_title)} />
                )
              }
              {
                what_it_means_list && (
                  <ul class="mb-8 space-y-4">
                    {what_it_means_list.map((item) => (
                      <li class="flex gap-3">
                        <span class="text-tertiary">â€¢</span>
                        <span set:html={markdownify(item)} />
                      </li>
                    ))}
                  </ul>
                )
              }
              {
                closing && (
                  <p class="text-lg/[inherit] font-medium" set:html={markdownify(closing)} />
                )
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

