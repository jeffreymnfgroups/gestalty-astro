---
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";
import LottieAnimation from "@/components/LottieAnimation";

const { title, subtitle, description, tiers } = (
  (await getEntry(
    "mentorshipHowItWorksSection",
    "mentorship-how-it-works"
  )) as CollectionEntry<"mentorshipHowItWorksSection">
).data;
---

<section class="section">
  <div class="container">
    <!-- Centered Heading Section -->
    <div class="row">
      <div class="mx-auto text-center lg:col-10" data-aos="fade-up-sm">
        {
          subtitle && (
            <p
              class="mb-2 font-medium text-tertiary"
              set:html={markdownify(subtitle)}
            />
          )
        }
        {title && <h2 class="mb-6" set:html={markdownify(title)} />}
        {
          description && (
            <p class="text-lg/[inherit]" set:html={markdownify(description)} />
          )
        }
      </div>
    </div>

    <!-- Two Column Layout: Lottie Left, Tiers Right -->
    <div class="row items-center pt-12">
      <!-- Left Side: Lottie Animation -->
      <div class="col-12 lg:col-6 mb-8 lg:mb-0" data-aos="fade-right">
        <LottieAnimation 
          client:load
          src="/images/education.lottie"
          className="w-full h-auto"
          loop={true}
          autoplay={true}
        />
      </div>

      <!-- Right Side: Tiers Cards -->
      <div class="col-12 lg:col-6 lg:pl-8" data-aos="fade-left">
        <div class="space-y-6">
          {
            tiers?.map((tier, index) => (
              <div
                class="rounded-xl bg-light px-6 py-6 md:rounded-2xl"
                data-aos="fade-up-sm"
                data-aos-delay={200 + index * 50}>
                {tier.title && (
                  <h3 class="h5 mb-3" set:html={markdownify(tier.title)} />
                )}
                {tier.description && (
                  <p set:html={markdownify(tier.description)} />
                )}
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

