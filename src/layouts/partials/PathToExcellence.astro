---
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const { title, subtitle, table } = (
  (await getEntry(
    "pathToExcellenceSection",
    "path-to-excellence"
  )) as CollectionEntry<"pathToExcellenceSection">
).data;

const contentByArea =
  table?.rows?.reduce((acc, row) => {
    if (row?.area) {
      acc[row.area] = row;
    }
    return acc;
  }, {} as Record<string, { area: string; before: string; after: string }>) || {};

const navItems = [
  {
    key: "Planning",
    icon: `<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round"><path d="M3 5h18"/><path d="M8 3v4"/><path d="M16 3v4"/><rect x="4" y="8" width="16" height="12" rx="2"/><path d="M8 12h4"/></svg>`,
    accent: "#fbc10d",
    imageLeft: "/images/planningleft.webp",
    imageRight: "/images/planningright.webp",
  },
  {
    key: "Self-Control",
    icon: `<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="9"/><path d="M12 7v5l3 3"/></svg>`,
    accent: "#fbc10d",
    imageLeft: "/images/twoleft.webp",
    imageRight: "/images/tworight.webp",
  },
  {
    key: "Strategy",
    icon: `<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round"><path d="M3 3l7 7-7 7"/><path d="M14 19l7-7-7-7"/><path d="M14 12h0"/></svg>`,
    accent: "#fbc10d",
    imageLeft: "/images/threeleftpng.webp",
    imageRight: "/images/threeright.webp",
  },
  {
    key: "Progress",
    icon: `<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round"><path d="M3 12h6l2 7 4-14 2 7h4"/><circle cx="3" cy="12" r="1"/></svg>`,
    accent: "#fbc10d",
    imageLeft: "/images/fourleft.webp",
    imageRight: "/images/fourright.webp",
  },
  {
    key: "Personalization",
    icon: `<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4Z"/><path d="M5.5 21a6.5 6.5 0 0 1 13 0"/></svg>`,
    accent: "#fbc10d",
    imageLeft: "/images/fiveleft.webp",
    imageRight: "/images/fiveright.webp",
  },
  {
    key: "Support",
    icon: `<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round"><circle cx="7" cy="7" r="3"/><circle cx="17" cy="7" r="3"/><path d="M4 21v-2a4 4 0 0 1 4-4h0"/><path d="M20 21v-2a4 4 0 0 0-4-4h0"/><path d="M12 10v1"/></svg>`,
    accent: "#fbc10d",
    imageLeft: "/images/sixleft.webp",
    imageRight: "/images/sixright.webp",
  },
];
---

<section class="gx-section">
  <div class="gx-shell">
    <header class="gx-header">
      {title && (
        <h2 class="gx-title font-NeueMontreal" set:html={markdownify(title)} />
      )}
      {subtitle && (
        <p class="gx-subtitle" set:html={markdownify(subtitle)} />
      )}
    </header>

    <div class="gx-grid">
      <nav class="gx-nav" aria-label="Transformation areas" role="tablist">
        {navItems.map((item, index) => {
          const row = contentByArea[item.key] || { before: "", after: "" };
          return (
            <button
              class="gx-nav-item"
              type="button"
              role="tab"
              aria-selected={index === 0 ? "true" : "false"}
              aria-controls="gx-panel"
              data-area={item.key}
              data-before={row.before}
              data-after={row.after}
              data-accent={item.accent}
              data-tab-index={index}
            >
              <span class="gx-nav-pill">
                <span class="gx-nav-label">{item.key}</span>
              </span>
            </button>
          );
        })}
      </nav>

      <div class="gx-content-grid" id="gx-panel" role="tabpanel" aria-live="polite">
        {navItems.map((item, index) => {
          const row = contentByArea[item.key] || { before: "", after: "" };
          return (
            <div
              class="gx-feature-card"
              data-area={item.key}
              data-index={index}
              style={index === 0 ? "" : "display: none;"}
            >
              <div class="gx-feature-layout">
                <div class="gx-visual-pair">
                  <figure class="gx-visual gx-visual-left">
                    <img src={item.imageLeft} alt={`${item.key} left view`} loading="lazy" />
                  </figure>
                  <figure class="gx-visual gx-visual-right">
                    <img src={item.imageRight} alt={`${item.key} right view`} loading="lazy" />
                  </figure>
                </div>

                <div class="gx-comparison-container">
                  <div class="gx-comparison-before">
                    <div class="gx-comparison-header">
                      <span class="gx-comparison-badge gx-badge-before">Before Gestalty</span>
                    </div>
                    <p class="gx-comparison-text">{row.before}</p>
                  </div>

                  <div class="gx-comparison-divider"></div>

                  <div class="gx-comparison-after">
                    <div class="gx-comparison-header">
                      <span class="gx-comparison-badge gx-badge-after">With Gestalty</span>
                    </div>
                    <p class="gx-comparison-text">{row.after}</p>
                  </div>
                </div>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </div>
</section>

<style>
  :global(:root) {
    --gx-bg: #0b1430;
    --gx-surface: #0f1e46;
    --gx-surface-alt: #102c63;
    --gx-text: #f8fbff;
    --gx-muted: #b7c3e3;
    --gx-accent: #fbc10d;
    --gx-border: #1f3a63;
    --gx-shadow: 0 16px 48px rgba(11, 20, 48, 0.55);
    --gx-radius: 14px;
    --gx-font-title: var(--font-primary), sans-serif;
    --gx-font-body: "Satoshi", "Inter", system-ui, -apple-system, sans-serif;
  }

  .gx-section {
    background: var(--gx-bg);
    padding: 5rem 1.25rem 5rem;
    color: var(--gx-text);
  }

  .gx-shell {
    max-width: 1240px;
    margin: 0 auto;
  }

  .gx-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .gx-title {
    font-family: var(--gx-font-title);
    font-size: clamp(1.9rem, 3vw, 2.5rem);
    font-weight: 800;
    letter-spacing: -0.02em;
    color: var(--gx-text);
    margin-bottom: 0.6rem;
  }

  .gx-subtitle {
    max-width: 760px;
    margin: 0 auto;
    font-family: var(--gx-font-body);
    font-size: 1rem;
    color: var(--gx-muted);
    line-height: 1.65;
  }

  .gx-grid {
    display: grid;
    grid-template-columns: minmax(220px, 260px) 1fr;
    gap: 3rem;
    align-items: start;
  }

  .gx-nav {
    position: sticky;
    top: 1rem;
    display: flex;
    flex-direction: column;
    padding: 0;
    background: transparent;
    border: none;
    border-radius: 0;
    box-shadow: none;
  }

  .gx-nav-item {
    width: 100%;
    text-align: left;
    background: transparent;
    border: none;
    color: var(--gx-text);
    cursor: pointer;
    font-family: var(--gx-font-body);
    padding: 0;
    position: relative;
  }

  .gx-nav-item:not(:last-child)::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: rgba(255, 255, 255, 0.08);
  }

  .gx-nav-pill {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1rem;
    border-radius: 0;
    border: none;
    background: transparent;
    transition: color 0.2s ease;
    width: 100%;
  }

  .gx-nav-item[aria-selected="true"] .gx-nav-pill {
    background: var(--gx-accent);
    color: #0b1430;
  }

  .gx-nav-item[aria-selected="true"] .gx-nav-label {
    font-weight: 600;
  }

  .gx-nav-item:not([aria-selected="true"]) .gx-nav-pill {
    color: var(--gx-muted);
  }

  .gx-nav-item:not([aria-selected="true"]) .gx-nav-pill:hover {
    background: rgba(251, 193, 13, 0.12);
    color: var(--gx-text);
  }

  .gx-nav-label {
    font-weight: 500;
    letter-spacing: 0.03em;
    font-size: 0.875rem;
    text-transform: none;
  }

  .gx-icon {
    display: inline-flex;
    width: 20px;
    height: 20px;
    color: currentColor;
  }

  .gx-content-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0;
  }

  .gx-feature-card {
    background: var(--gx-surface);
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    padding: 2.1rem;
    display: flex;
    flex-direction: column;
    transition: opacity 0.3s ease, border-color 0.2s ease;
  }

  .gx-feature-card[style*="display: none"] {
    opacity: 0;
  }

  .gx-feature-layout {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .gx-visual-pair {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 0.75rem;
  }

  .gx-visual {
    position: relative;
    overflow: hidden;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background: #0d1834;
    aspect-ratio: 4 / 3;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .gx-visual img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .gx-comparison-container {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 1.1rem;
    align-items: start;
    background: linear-gradient(145deg, #13234c, #0e1a3b);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    padding: 1.25rem;
  }

  .gx-comparison-before,
  .gx-comparison-after {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .gx-comparison-header {
    display: flex;
    align-items: center;
  }

  .gx-comparison-badge {
    display: inline-block;
    font-family: var(--gx-font-body);
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--gx-muted);
  }

  .gx-badge-before {
    color: rgba(255, 255, 255, 0.55);
  }

  .gx-badge-after {
    color: var(--gx-accent);
  }

  .gx-comparison-text {
    font-family: var(--gx-font-body);
    font-size: 0.93rem;
    line-height: 1.65;
    color: rgba(248, 251, 255, 0.85);
    margin: 0;
  }

  .gx-comparison-divider {
    width: 1px;
    height: 100%;
    background: rgba(255, 255, 255, 0.12);
  }

  .gx-feature-card:hover {
    border-color: rgba(59, 130, 246, 0.6);
  }

  @media (max-width: 1023px) {
    .gx-grid {
      grid-template-columns: 1fr;
    }

    .gx-nav {
      position: relative;
      flex-direction: row;
      overflow-x: auto;
      gap: 0;
      margin-bottom: 2rem;
      -webkit-overflow-scrolling: touch;
    }

    .gx-nav-item {
      flex-shrink: 0;
    }

    .gx-nav-item:not(:last-child)::after {
      display: none;
    }

    .gx-nav-pill {
      padding: 0.75rem 1rem;
      white-space: nowrap;
    }

    .gx-content-grid {
      grid-template-columns: 1fr;
    }

    .gx-feature-card {
      padding: 2rem;
    }

    .gx-visual-pair {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    }

    .gx-comparison-container {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .gx-comparison-divider {
      width: 100%;
      height: 1px;
    }
  }

  @media (max-width: 640px) {
    .gx-section {
      padding: 4rem 1rem 4rem;
    }

    .gx-feature-card {
      padding: 1.75rem;
    }

    .gx-visual-pair {
      grid-template-columns: 1fr;
    }

    .gx-comparison-container {
      padding: 1.1rem 1.25rem;
    }

    .gx-comparison-text {
      font-size: 0.92rem;
    }
  }
</style>

<script is:inline>
  (() => {
    let cleanup = () => {};

    const init = () => {
      const buttons = Array.from(document.querySelectorAll(".gx-nav-item"));
      const cards = Array.from(document.querySelectorAll(".gx-feature-card"));

      if (!buttons.length || !cards.length) {
        return () => {};
      }

      const clickHandlers = new Map();
      const keyHandlers = new Map();

      function setActive(nextBtn) {
        const area = nextBtn.getAttribute("data-area") || "";

        buttons.forEach((btn) => {
          const isActive = btn === nextBtn;
          btn.setAttribute("aria-selected", isActive ? "true" : "false");
          btn.setAttribute("tabindex", isActive ? "0" : "-1");
        });

        cards.forEach((card) => {
          if (card.getAttribute("data-area") === area) {
            card.style.display = "flex";
            card.style.opacity = "1";
          } else {
            card.style.display = "none";
            card.style.opacity = "0";
          }
        });

        nextBtn.focus({ preventScroll: true });
      }

      buttons.forEach((btn, index) => {
        const handleClick = () => setActive(btn);
        const handleKeydown = (e) => {
          const currentIndex = index;
          if (e.key === "ArrowDown" || e.key === "ArrowRight") {
            e.preventDefault();
            const next = buttons[(currentIndex + 1) % buttons.length];
            setActive(next);
          }
          if (e.key === "ArrowUp" || e.key === "ArrowLeft") {
            e.preventDefault();
            const prev = buttons[(currentIndex - 1 + buttons.length) % buttons.length];
            setActive(prev);
          }
        };

        clickHandlers.set(btn, handleClick);
        keyHandlers.set(btn, handleKeydown);

        btn.addEventListener("click", handleClick);
        btn.addEventListener("keydown", handleKeydown);
      });

      setActive(buttons[0]);

      return () => {
        buttons.forEach((btn) => {
          const clickHandler = clickHandlers.get(btn);
          const keyHandler = keyHandlers.get(btn);
          if (clickHandler) btn.removeEventListener("click", clickHandler);
          if (keyHandler) btn.removeEventListener("keydown", keyHandler);
        });
      };
    };

    const setup = () => {
      cleanup();
      cleanup = init();
    };

    const destroy = () => {
      cleanup();
    };

    const ready = () => {
      setup();
      document.addEventListener("astro:page-load", setup);
      document.addEventListener("astro:before-swap", destroy);
    };

    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", ready, { once: true });
    } else {
      ready();
    }
  })();
</script>
