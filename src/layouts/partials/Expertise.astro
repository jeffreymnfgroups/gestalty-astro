---
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";
import theme from "@/config/theme.json";

const { title, subtitle, description, list } = (
  (await getEntry(
    "expertiseSection",
    "expertise"
  )) as CollectionEntry<"expertiseSection">
).data;

// Theme colors
const tertiary = theme.colors.default.theme_color.tertiary; // #19254c
const primary = theme.colors.default.theme_color.primary; // #1d1d1d
const secondary = theme.colors.default.theme_color.secondary; // #fbc10d
const textLight = theme.colors.default.text_color["text-light"]; // #f6f6f6

// Theme fonts
const fontPrimary = theme.fonts.font_family.primary; // Satoshi
const fontSecondary = theme.fonts.font_family.secondary; // Clash Grotesk

// Generate placeholder images for each item
const placeholderImages = [
  { preview: "https://images.unsplash.com/photo-1617791160536-598cf32026fb?w=400&h=600&fit=crop", main: "https://images.unsplash.com/photo-1617791160536-598cf32026fb?w=1200&h=800&fit=crop" },
  { preview: "https://images.unsplash.com/photo-1504384308090-c894fdcc538d?w=400&h=600&fit=crop", main: "https://images.unsplash.com/photo-1504384308090-c894fdcc538d?w=1200&h=800&fit=crop" },
  { preview: "https://images.unsplash.com/photo-1522071820081-009f0129c71c?w=400&h=600&fit=crop", main: "https://images.unsplash.com/photo-1522071820081-009f0129c71c?w=1200&h=800&fit=crop" },
  { preview: "https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?w=400&h=600&fit=crop", main: "https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?w=1200&h=800&fit=crop" },
  { preview: "https://images.unsplash.com/photo-1519389950473-47ba0277781c?w=400&h=600&fit=crop", main: "https://images.unsplash.com/photo-1519389950473-47ba0277781c?w=1200&h=800&fit=crop" },
];
---

<section class="expertise-accordion-section section" style={`--tertiary: ${tertiary}; --primary: ${primary}; --text-light: ${textLight}; --font-primary: ${fontPrimary}; --font-secondary: ${fontSecondary};`}>
  <div class="container">
    <div class="row">
      <div class="mx-auto text-center lg:col-10" data-aos="fade-up-sm">
        {title && <h2 class="mb-6" set:html={markdownify(title)} />}
        {
          description && (
            <p class="text-lg/[inherit]" set:html={markdownify(description)} />
          )
        }
      </div>
    </div>
  </div>

  <style>
    .expertise-accordion-section {
      margin: 0 !important;
      padding: 0 !important;
    }

    .expertise-accordion-section .container {
      padding-top: 60px;
      padding-bottom: 40px;
    }

    .expertise-accordion {
      display: flex;
      width: 100%;
      height: 600px;
      padding: 2% 2% 2% 2%;
      margin: 0 0 40px 0;
      list-style: none;
      gap: 8px;
    }

    .expertise-accordion__item {
      display: flex;
      justify-content: center;
      position: relative;
      flex: 1;
      margin: 0;
      border-radius: 22px;
      overflow: hidden;
      background-color: var(--primary);
      cursor: pointer;
      transition: all 0.6s ease-out;
    }

    .expertise-accordion__item_active {
      flex: 5;
    }

    .expertise-accordion__item-title,
    .expertise-accordion__item-subtitle,
    .expertise-accordion__item-description {
      color: var(--text-light);
      text-shadow: 1px 1px 22px rgba(251, 193, 13, 0.4);
    }

    .expertise-accordion__item-title {
      position: absolute;
      bottom: 0;
      left: 8px;
      padding: 10px 0;
      font-family: var(--font-primary), sans-serif;
      font-size: 14px;
      transition: all 0.4s ease-in-out;
      z-index: 2;
      font-weight: 600;
    }

    .expertise-accordion__item-description {
      position: absolute;
      bottom: 0;
      left: 8px;
      padding: 10px 0;
      font-family: var(--font-primary), sans-serif;
      font-size: 12px;
      opacity: 0;
      transition: all 0.4s ease-in-out;
      z-index: 2;
      max-width: 200px;
      line-height: 1.4;
    }

    .expertise-accordion__item-subtitle {
      position: absolute;
      bottom: 50%;
      right: 50%;
      transform: translateX(50%);
      font-family: var(--font-secondary), sans-serif;
      font-size: 80px;
      opacity: 0;
      transition: all 0.4s ease-in-out;
      z-index: 2;
      font-weight: 700;
    }

    .expertise-accordion__item-image {
      height: 100%;
      width: 100%;
      object-fit: cover;
    }

    .expertise-accordion__item .preview__image {
      display: block;
    }

    .expertise-accordion__item .main__image {
      display: none;
    }

    .expertise-accordion__item_active .preview__image {
      display: none;
    }

    .expertise-accordion__item_active .main__image {
      display: block;
    }

    .expertise-accordion__item_active .expertise-accordion__item-title {
      position: absolute;
      bottom: 60px;
      left: 20px;
      padding: 20px 0;
      font-size: 33px;
      opacity: 1;
      font-weight: 700;
    }

    .expertise-accordion__item_active .expertise-accordion__item-description {
      position: absolute;
      bottom: 0;
      left: 20px;
      padding: 20px 0;
      font-size: 16px;
      opacity: 0.9;
      max-width: 400px;
    }

    .expertise-accordion__item_active .expertise-accordion__item-subtitle {
      display: block;
      bottom: 10px;
      right: 20px;
      transform: translateX(0);
      font-size: 80px;
      line-height: 100px;
      opacity: 0.8;
    }

    @media (max-width: 1024px) {
      .expertise-accordion {
        height: 500px;
        padding: 2% 2% 2% 2%;
      }

      .expertise-accordion__item_active .expertise-accordion__item-title {
        font-size: 28px;
      }

      .expertise-accordion__item_active .expertise-accordion__item-subtitle {
        font-size: 60px;
        line-height: 80px;
      }
    }

    @media (max-width: 768px) {
      .expertise-accordion-section .container {
        padding-top: 40px;
        padding-bottom: 30px;
      }

      .expertise-accordion {
        flex-direction: column;
        height: auto;
        padding: 2% 2% 2% 2%;
        margin: 0 0 30px 0;
        gap: 12px;
      }

      .expertise-accordion__item {
        width: 100%;
        height: 120px;
        flex: none;
        margin: 0;
      }

      .expertise-accordion__item_active {
        height: 300px;
        flex: none;
      }

      .expertise-accordion__item-title {
        font-size: 12px;
        left: 12px;
      }

      .expertise-accordion__item-subtitle {
        font-size: 32px;
      }

      .expertise-accordion__item_active .expertise-accordion__item-subtitle {
        font-size: 40px;
        line-height: 50px;
        bottom: 8px;
        right: 12px;
      }

      .expertise-accordion__item_active .expertise-accordion__item-title {
        font-size: 18px;
        bottom: 50px;
        left: 12px;
      }

      .expertise-accordion__item_active .expertise-accordion__item-description {
        font-size: 13px;
        max-width: calc(100% - 40px);
        left: 12px;
        bottom: 12px;
      }
    }

    @media (max-width: 480px) {
      .expertise-accordion-section .container {
        padding-top: 30px;
        padding-bottom: 20px;
      }

      .expertise-accordion {
        padding: 1.5% 1.5% 1.5% 1.5%;
        gap: 8px;
      }

      .expertise-accordion__item {
        height: 100px;
        border-radius: 16px;
      }

      .expertise-accordion__item_active {
        height: 280px;
      }

      .expertise-accordion__item-title {
        font-size: 11px;
        left: 10px;
      }

      .expertise-accordion__item-subtitle {
        font-size: 28px;
      }

      .expertise-accordion__item_active .expertise-accordion__item-subtitle {
        font-size: 36px;
        line-height: 44px;
      }

      .expertise-accordion__item_active .expertise-accordion__item-title {
        font-size: 16px;
        bottom: 45px;
        left: 10px;
      }

      .expertise-accordion__item_active .expertise-accordion__item-description {
        font-size: 12px;
        max-width: calc(100% - 30px);
        left: 10px;
        bottom: 10px;
      }
    }
  </style>

  <ul class="expertise-accordion">
    {
      list?.map((item, index) => {
        const itemWithImage = item as { title?: string; description?: string; image?: string };
        const baseImage = itemWithImage.image?.trim();
        const images = baseImage
          ? {
              preview: `${baseImage}${baseImage.includes('?') ? '&' : '?'}w=400&h=600&fit=crop`,
              main: `${baseImage}${baseImage.includes('?') ? '&' : '?'}w=1200&h=800&fit=crop`,
            }
          : placeholderImages[index % placeholderImages.length];
        const isActive = index === 1; // Second item active by default
        return (
          <li
            class={`expertise-accordion__item ${isActive ? 'expertise-accordion__item_active' : ''}`}
            data-index={index}>
            <div class="expertise-accordion__item-subtitle">#{String(index + 1).padStart(2, '0')}</div>
            {item.title && (
              <div class="expertise-accordion__item-title" set:html={markdownify(item.title)} />
            )}
            {item.description && (
              <div class="expertise-accordion__item-description" set:html={markdownify(item.description)} />
            )}
            <img
              src={images.preview}
              alt={item.title || ''}
              class="expertise-accordion__item-image preview__image"
            />
            <img
              src={images.main}
              alt={item.title || ''}
              class="expertise-accordion__item-image main__image"
            />
          </li>
        );
      })
    }
  </ul>

  <script>
    function initAccordion() {
      'use strict';
      const items = document.querySelectorAll('.expertise-accordion__item');
      
      for (const item of items) {
        // Remove existing listeners by cloning
        const newItem = item.cloneNode(true);
        item.parentNode?.replaceChild(newItem, item);
      }
      
      // Re-query after clone
      const freshItems = document.querySelectorAll('.expertise-accordion__item');
      
      const removeActiveClasses = () => {
        freshItems.forEach((item) => {
          item.classList.remove('expertise-accordion__item_active');
        });
      };

      for (const item of freshItems) {
        item.addEventListener('click', () => {
          removeActiveClasses();
          item.classList.add('expertise-accordion__item_active');
        });
      }
    }

    // Initialize on load
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initAccordion);
    } else {
      initAccordion();
    }

    // Re-initialize on page navigation (Astro transitions)
    document.addEventListener('astro:page-load', () => {
      initAccordion();
    });
  </script>
</section>

