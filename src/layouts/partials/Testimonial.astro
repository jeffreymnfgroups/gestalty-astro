---
import ImageMod from "@/components/ImageMod.astro";
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const { content, visible_testimonial, largeHeading } = Astro.props;

const contentEntry = (
  (await getEntry(
    "testimonialSection",
    "testimonial"
  )) as CollectionEntry<"testimonialSection">
).data;

let { title, subtitle, description, list } = contentEntry;

const comparisonRows = [
  {
    traditional: `"I studied 8 hours" → 8% real progress`,
    gestalty: "8 hours in balanced knowledge acquisition → 68% progress",
  },
  {
    traditional: "Focus on quantity",
    gestalty: "Focus on quality, retention, and application",
  },
];

// Override default blog data (Title, Subtitle & Description) with props if provided
if (content) {
  ({ title, subtitle, description } = content);
}

if (visible_testimonial) {
  list = list?.slice(0, visible_testimonial);
}
---

<section class="section pt-24">
  <div class="container">
    <div class="row">
      <div class="mx-auto text-center lg:col-8 xl:col-9" data-aos="fade-up-sm">
        {
          subtitle && (
            <p
              class="mb-2 font-medium text-tertiary"
              set:html={markdownify(subtitle)}
            />
          )
        }

        {
          title &&
            (largeHeading ? (
              <h1 class="h2 md:h1 mb-6" set:html={markdownify(title)} />
            ) : (
              <h2 class="mb-6" set:html={markdownify(title)} />
            ))
        }
        {
          description && (
            <p class="text-lg/[inherit]" set:html={markdownify(description)} />
          )
        }
      </div>

      <div class="col-12 pt-16" data-aos="fade-up-sm" data-aos-delay="150">
        <div class="grid gap-10 lg:grid-cols-[1.2fr_1fr]">
          <div class="space-y-8 rounded-3xl border border-border/60 bg-white p-8 shadow-sm md:p-10">
            <p class="text-sm font-semibold uppercase tracking-[0.08em] text-tertiary">
              Supporting quote
            </p>
            <p class="text-2xl font-semibold leading-snug text-primary md:text-3xl">
              “What gets scheduled gets done. What gets tracked gets optimized.”
            </p>
            <div class="space-y-4 rounded-2xl border border-border/60 bg-light px-5 py-5">
              <div class="flex items-center justify-between text-xs font-semibold uppercase tracking-[0.08em] text-tertiary">
                <span>Traditional Method</span>
                <span>Gestalty</span>
              </div>
              <div class="grid gap-4 text-sm text-primary/85 sm:grid-cols-2">
                <div class="space-y-2 rounded-xl border border-border/60 bg-white px-4 py-3 shadow-xs">
                  <p class="text-xs font-semibold uppercase tracking-[0.08em] text-tertiary">
                    Traditional Method
                  </p>
                  <p>“I studied 8 hours” → 8% real progress.</p>
                  <p>Focus on quantity.</p>
                </div>
                <div class="space-y-2 rounded-xl border border-border/60 bg-white px-4 py-3 shadow-xs">
                  <p class="text-xs font-semibold uppercase tracking-[0.08em] text-tertiary">
                    Gestalty
                  </p>
                  <p>8 hours in balanced knowledge acquisition → 68% progress.</p>
                  <p>Focus on quality, retention, and application.</p>
                </div>
              </div>
            </div>
            <div class="grid gap-4 sm:grid-cols-2">
              <div class="space-y-3 rounded-2xl border border-border/60 bg-light px-5 py-4">
                <p class="text-xs font-semibold uppercase tracking-[0.08em] text-tertiary">
                  Why it works
                </p>
                <ul class="space-y-2 text-sm text-primary/85">
                  <li>Balanced inputs → stronger recall.</li>
                  <li>Short feedback loops → faster correction.</li>
                  <li>Application-first → durable confidence.</li>
                </ul>
              </div>
              <div class="space-y-3 rounded-2xl border border-border/60 bg-light px-5 py-4">
                <p class="text-xs font-semibold uppercase tracking-[0.08em] text-tertiary">
                  Micro commitments
                </p>
                <ul class="space-y-2 text-sm text-primary/85">
                  <li>15-minute review anchors daily.</li>
                  <li>One measurable outcome per block.</li>
                  <li>Weekly reflection + reuse checklist.</li>
                </ul>
              </div>
            </div>
          </div>

          <div class="relative overflow-hidden rounded-3xl border border-border/60 bg-light shadow-sm">
            <div class="aspect-[5/6]">
              <ImageMod
                class="h-full w-full object-cover"
                src="/images/ten.webp"
                alt="Calm workspace with notes and schedule"
              />
            </div>
            <div class="absolute bottom-4 left-4 right-4 flex flex-col gap-2 rounded-2xl bg-white/90 px-4 py-3 shadow-sm backdrop-blur">
              <p class="text-xs font-semibold uppercase tracking-[0.08em] text-tertiary">
                Snapshot
              </p>
              <p class="text-sm text-primary/80">
                Consistent practice blocks, reflection notes, and clear next steps.
              </p>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
