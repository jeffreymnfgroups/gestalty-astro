---
import MiniComparisonChart from "@/components/MiniComparisonChart";
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const { content, visible_testimonial, largeHeading } = Astro.props;

const contentEntry = (
  (await getEntry(
    "testimonialSection",
    "testimonial"
  )) as CollectionEntry<"testimonialSection">
).data;

let { title, subtitle, description, list } = contentEntry;

const comparisonRows = [
  {
    traditional: `"I studied 8 hours" → 8% real progress`,
    gestalty: "8 hours in balanced knowledge acquisition → 68% progress",
  },
  {
    traditional: "Focus on quantity",
    gestalty: "Focus on quality, retention, and application",
  },
];

// Override default blog data (Title, Subtitle & Description) with props if provided
if (content) {
  ({ title, subtitle, description } = content);
}

if (visible_testimonial) {
  list = list?.slice(0, visible_testimonial);
}
---

<section class="ps-section relative isolate bg-white text-body py-10 sm:py-12 lg:py-16">
  <div class="container">
    <div class="row items-center">
      <div class="mx-auto text-center lg:col-8 xl:col-9" data-aos="fade-up-sm">
        {
          subtitle && (
            <p
              class="mb-2 inline-flex items-center justify-center gap-2 rounded-full bg-light px-4 py-1 text-xs font-semibold uppercase tracking-[0.14em] text-tertiary"
              set:html={markdownify(subtitle)}
            />
          )
        }

        {
          title &&
            (largeHeading ? (
              <h1 class="h2 md:h1 mb-4 text-primary" set:html={markdownify(title)} />
            ) : (
              <h2 class="mb-4 text-primary" set:html={markdownify(title)} />
            ))
        }
        {
          description && (
            <p class="mx-auto max-w-3xl text-lg text-primary/80" set:html={markdownify(description)} />
          )
        }
      </div>

      <div class="col-12 pt-12" data-aos="fade-up-sm" data-aos-delay="120">
        <div class="flex justify-center">
          <div class="flex w-full max-w-5xl flex-col gap-8 rounded-xl border border-border/80 bg-white p-8 shadow-xs md:p-12">
            <div class="flex items-center gap-3">
              <span class="flex h-12 w-12 items-center justify-center rounded-md border border-border/70 bg-light/70 text-xl font-bold text-primary">
                “
              </span>
              <div class="space-y-1">
                <p class="text-xs font-semibold uppercase tracking-[0.14em] text-tertiary">
                  Quotes
                </p>
                <p class="text-xl font-semibold text-primary md:text-2xl">
                  What gets scheduled gets done. What gets tracked gets optimized.
                </p>
              </div>
            </div>

            <div class="rounded-lg border border-border/70 bg-light/70 p-4 shadow-xxs">
              <MiniComparisonChart client:load rows={comparisonRows} />
            </div>

            <div class="grid gap-4 md:grid-cols-2">
              <div class="rounded-lg border border-border/70 bg-light/70 p-5 shadow-xxs">
                <p class="mb-3 text-xs font-semibold uppercase tracking-[0.12em] text-tertiary">
                  Traditional
                </p>
                <ul class="space-y-2 text-sm text-primary/80">
                  {
                    comparisonRows.map((row) => (
                      <li>{row.traditional}</li>
                    ))
                  }
                </ul>
              </div>
              <div class="rounded-lg border border-border/70 bg-white p-5 shadow-xxs">
                <p class="mb-3 text-xs font-semibold uppercase tracking-[0.12em] text-primary">
                  Gestalty
                </p>
                <ul class="space-y-2 text-sm text-primary/85">
                  {
                    comparisonRows.map((row) => (
                      <li>{row.gestalty}</li>
                    ))
                  }
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

    </div>
  </div>
</section>
