---
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const { title, subtitle, description, list } = (
  (await getEntry(
    "expertGuidanceSection",
    "expert-guidance"
  )) as CollectionEntry<"expertGuidanceSection">
).data;
---

<section class="section">
  <div class="container">
    <div class="row">
      <div class="mx-auto text-center lg:col-10" data-aos="fade-up-sm">
        {
          subtitle && (
            <p
              class="mb-2 font-medium text-tertiary"
              set:html={markdownify(subtitle)}
            />
          )
        }
        {title && <h2 class="mb-6" set:html={markdownify(title)} />}
        {
          description && (
            <p class="text-lg/[inherit]" set:html={markdownify(description)} />
          )
        }
      </div>
      {
        list && list.length > 0 && (
          <div class="col-12 pt-12">
            <div class="row g-4 justify-center">
              {list.map((item, index) => (
                <div
                  class="lg:col-10"
                  data-aos="fade-up-sm"
                  data-aos-delay={200 + index * 50}>
                  <div class="rounded-xl bg-light p-6 md:rounded-3xl md:p-8">
                    <p class="mb-0 text-lg/[inherit]" set:html={markdownify(item)} />
                  </div>
                </div>
              ))}
            </div>
          </div>
        )
      }
    </div>
  </div>
</section>

